@model ClienteModel
@{
    ViewData["Title"] = "nuevo cliente";
}
<<h1>Nuevo cliente</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div asp-validation-summary="ModelOnly"></div>

            <form asp-action="Create" class="row">
                @Html.AntiForgeryToken()
                <div class="mb-3 col-6">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" type="text" class="form-control">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Apellido" class="form-label"></label>
                    <input asp-for="Apellido" type="text" class="form-control">
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" type="text" class="form-control">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" type="email" class="form-control">
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Direccion" class="form-label"></label>
                    <input asp-for="Direccion" type="text" class="form-control">
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

        </div>
    </div>
</div>